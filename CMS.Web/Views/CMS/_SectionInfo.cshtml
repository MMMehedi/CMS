<div id="breadcrumbs" class="breadcrumbs ace-save-state">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="" ng-click="Home()">Home</a>
            <i class="ace-icon fa fa-angle-double-right"></i> Section
        </li>
    </ul>
</div>
<form name="SectionInfo" ng-controller="SectionInfoCtrl" class="form-horizontal" role="form" novalidate>
    <div id="splash-page" data-ng-show="showSplash" class="dissolve-animation">
        <div class="page-splash">
            <div class="page-splash-message">
                <img src="~/dist/img/ajax-loading.gif" />  <b>Please wait ....</b>
            </div>
        </div>
    </div>


    <div class="widget-box col-md-12 col-xs-12">
        <div class="widget-header">
            <h4 class="widget-title">Section Info</h4>
            <div class="widget-toolbar">
                <a href="#" data-action="collapse">
                    <i class="ace-icon fa fa-chevron-up"></i>
                </a>
            </div>
        </div>

        <div class="widget-body">
            <div class="widget-main col-md-12 col-xs-12">
                <div class="col-md-6">
                    <div class="form-group panel-body">
                        <label class="col-md-3 control-label no-paddidata-ng-middle">Class <span style="color:red">*</span> </label>
                        <div class="col-md-8">
                            <select id="ClassId" class="bordercolor" ng-model="SectionInfo.ClassID " ng-options="m.ClassID as m.ClassName for m in Classs"style='width: 100%;'>
                                <option value="">-- Select Class --</option>
                            </select>
                        </div>
                    </div>
                   
                </div>
                <div class="col-md-6">
                    <div class="form-group panel-body">
                        <label class="col-md-3 control-label no-paddidata-ng-right">Section Name <span style="color:red">*</span> </label>
                        <div class="col-md-8">
                           <input type="text" autocomplete="off" id="SectionId"   ng-model="SectionInfo.SectionName" class="form-control bordercolor text-capitalize" placeholder="Can't be empty"  />
                        </div>
                    </div>

                    <div class="form-group ">
                        <label class="col-md-3 control-label no-paddidata-ng-right"> Is Active? </label>
                        <div class="col-md-1">
                            <div class="checkbox">
                                <label class="block">
                                    <input type="checkbox" class="ace input-lg" id="Active" ng-model="SectionInfo.Status" name="form-field-checkbox" />
                                    <span class="lbl bigger-120"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-offset-5 col-md-7">
                    <button class="btn btn-success" type="button" ng-disabled="SaveDisabled" ng-click="Save(SectionInfo)">
                        <i ng-hide="msgSave" class="ace-icon fa fa-save bigger-110"> {{buttonText}}</i>
                        <span ng-hide="msgloading"><i ng-hide="msgspinner" class="fa fa-spinner fa-spin"></i></span>
                        <span ng-hide="msgloading">Loading</span>
                    </button>
                    &nbsp;
                    <button class="btn btn-warning" type="button" ng-click="ClearAll()">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>
        </div>
    </div>

    <span class="input-icon" style="float: right;">
        <input ng-keypress="$event.keyCode == 13 && $event.preventDefault()" type="text" autocomplete="off" ng-model="filterOptions.filterText" class="form-control search-query" placeholder="Search...">
        <i class="ace-icon fa fa-search nav-search-icon"></i>
    </span>
    <div class="widget-box col-md-12 col-xs-12">
        <div class="table-responsive" style="margin-top:4px">
            <div class="gridStyle" ng-grid="gridOptions">
                <div id="divMsg" class="watermark">No data available</div>
            </div>
        </div>
    </div>

</form>
